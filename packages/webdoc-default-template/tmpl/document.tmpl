<?js
/**
 * Documentation object render component.
 */
const
  docData = obj,
  docList = obj.docs;

docList.forEach((doc) => {
?>
<div class="page-content">
  <div class="document">
    <h1 class="document__title"><?js= doc.path ?></h1>
    <?js= this.partial("components/signature.tmpl", doc) ?>

  <div class="document__brief"><?js= doc.brief ?></div>
  <div class="ducument__description"><?js= doc.description ?></div>

    <?js if (doc.type === "ClassDoc") {
      // Constructor
      const ctorDoc = this.getConstructor(doc);

      if (ctorDoc) { ?>
        <div class="members">
          <h2 class="members__category">Constructor</h2>
          <?js= this.partial("components/member.tmpl", ctorDoc) ?>
        </div>
      <?js }
    } ?>

    <?js= this.partial("components/members.tmpl", {
      title: "Public Properties",
      parent: doc,
      constraints: {
        access: "public",
        type: "PropertyDoc",
      },
    }) ?>
    <?js= this.partial("components/members.tmpl", {
      title: "Protected Properties",
      parent: doc,
      constraints: {
        access: "protected",
        type: "PropertyDoc"
      }
    }) ?>
    <?js= this.partial("components/members.tmpl", {
      title: "Public Methods",
      parent: doc,
      constraints: {
        access: "public",
        type: ["MethodDoc", "FunctionDoc"],
      },
    }) ?>
    <?js= this.partial("components/members.tmpl", {
      title: "Protected Methods",
      parent: doc,
      constraints: {
        access: "protected",
        type: ["MethodDoc", "FunctionDoc"]
      }
    }) ?>
  </div>
</div>
<nav class="members-explorer">
    <?js= this.partial("components/members-explorer/index.tmpl", doc) ?>
</nav>
<?js }); ?>
